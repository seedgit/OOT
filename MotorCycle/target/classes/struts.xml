<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <package name="MotorCycle" extends="struts-default">
        <action name="">
            <result>/jsp/index.jsp</result>
        </action>
        <action name="index" class="th.ac.kmitl.it.oot.motorcycle.view.IndexAction" method="execute">
            <result name="success">/jsp/index.jsp</result>
        </action>
        <action name="brandList" class="th.ac.kmitl.it.oot.motorcycle.view.BrandListAction" method="execute">
            <result name="success">/jsp/brand-list.jsp</result>
        </action>
        <action name="brand" class="th.ac.kmitl.it.oot.motorcycle.view.BrandAction" method="execute">
            <result name="success">/jsp/brand-form.jsp</result>
        </action>
        <action name="brandEdit" class="th.ac.kmitl.it.oot.motorcycle.view.BrandAction" method="execute">
            <result name="success">/jsp/brand-form.jsp</result>
        </action>
        <action name="brandAdd" class="th.ac.kmitl.it.oot.motorcycle.view.BrandAddAction" method="execute">
            <result name="success">/jsp/brand-add.jsp</result>
        </action>
    </package>
</struts>